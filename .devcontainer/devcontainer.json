{
    "name": "C# (.NET)",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp",
                "ms-dotnettools.vscode-dotnet-runtime",
                "formulahendry.dotnet-test-explorer"
            ]
        }
    },
    "forwardPorts": [5000, 5001],
    "postCreateCommand": "dotnet restore",
    "remoteUser": "vscode"
} 